<!DOCTYPE html>
<html lang="en">

<!-- HEAD -->
<%- include ("../partials/head") %>
    <link rel="stylesheet" href="/css/register.css">
    </head>

    <body class="body-register">

        <!-- HEADER -->
        <%- include ("../partials/header") %>

            <main class="main-register">
                <!-- formulario register -->

                <div class="formulario-container">
                    <form action="/register" method="POST" enctype="multipart/form-data">

                        <div class="titulo-register-conteiner">
                            <label class="Titulo-register">Registrarme</label><br>
                        </div>

                    <div class="errors-email errors">
                        <label class="titulos-boxs" for="email" class="text-boxs">Email</label><br>
                        <input class="text-boxs" type="text" name="email" value="<%= locals.oldData ? oldData.email : null %>"><br>

                        <% if (locals.errors && errors.email) { %>
                            <div class="text-danger">
                                <%= errors.email.msg %>
                            </div>
                        <% } %>
                    </div>
                    
                    <div class="errors-fullName errors">
                        <label class="titulos-boxs" for="fullName">Nombre y apellido:</label><br>
                        <input class="text-boxs" type="text" name="fullName" id="name"
                            placeholder="Ej. Florencio Perez" value="<%= locals.oldData ? oldData.fullName : null %>"><br>

                            <% if (locals.errors && errors.fullName) { %>
                                <div class="text-danger">
                                    <%= errors.fullName.msg %> 
                                </div>
                            <% } %>
                    </div>           

                    <div class="errors-password errors">
                        <label class="titulos-boxs" for="password">Ingrese una contraseña:</label>
                        <input class="text-boxs" type="password" name="password" id="pass">

                        <% if (locals.errors && errors.password) { %>
                            <div class="text-danger">
                                <%= errors.password.msg %>
                            </div>
                        <% } %>
                    </div>            

                    <div class="errors-confirmPass errors">
                        <label class="titulos-boxs" for="confirmPass">Confirme la contraseña:</label>
                        <input class="text-boxs" type="password" name="confirmPass" id="pass-repeat">

                        <% if (locals.errors && errors.confirmPass) { %>
                            <div class="text-danger">
                                <%= errors.confirmPass.msg %>
                            </div>
                        <% } %>
                    </div>
                    
                    <div class="errors-domicilio errors">
                        <label class="titulos-boxs" for="domicilio">Domicilio:</label>
                        <input class="text-boxs" type="text" name="domicilio" id="domicilio"
                            placeholder="Ej. Cabred 1900" value="<%= locals.oldData ? oldData.domicilio : null %>"><br>

                            <% if (locals.errors && errors.domicilio) { %>
                                <div class="text-danger">
                                    <%= errors.domicilio.msg %>
                                </div>
                            <% } %>
                    </div>            

                    <div class="errors-imgUser errors">
                        <label class="titulos-boxs" for="imgUser">Seleccione una imagen para su perfil:</label><br>
                        <div class="file-select">
                            <input class="file" type="file" name="imgUser" accept=".jpg, .png, .jpeg">
                        
                            <% if (locals.errors && errors.imgUser) { %>
                                <div class="text-danger">
                                    <%= errors.imgUser.msg %>
                                </div>
                            <% } %>

                        </div>
                    </div>
                        
                        <div class="buttons">
                            <!-- button limpiar o borrar formulario -->
                            <input class="button-reset" type="reset" name="reset" id="reset">

                            <!-- button enviar -->
                            <input class="button-submit" type="submit" name="submit" id="submit-and-go-to-home">
                        </div>

                        <div class="redirec-login">
                            <div>
                                <label">Ya tienes una cuenta?</label>
                            </div>
                            <a class="link-inicia-sesion" href="/login">Inicia sesión</a>

                        </div>
                    </form>
                </div>
            </main>

            <!-- FOOTER -->
            <%- include ("../partials/footer") %>

    </body>

</html>