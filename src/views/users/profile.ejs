<!DOCTYPE html>
<html lang="en">

<!-- HEAD -->
<%- include ("../partials/head") %>
    <link rel="stylesheet" href="/css/profile.css">
    </head>

    <body class="body-register">

        <!-- HEADER -->
        <%- include ("../partials/header") %>

            <main class="main-register">
                <!-- formulario register -->

                <div class="formulario-container">
                    <form action="/edit/<%= user.id %>" method="POST" enctype="multipart/form-data">

                        <div class="titulo-register-conteiner">
                            <label class="Titulo-register">Mi perfil</label><br>
                        </div>

                        <div class="errors-email errors">
                            <label class="titulos-boxs" for="email" class="text-boxs">Email</label><br>
                            
                            
                            
                        </div>
                        <h3 class="data-user"><%= locals.userLogged.email %></h3>

                        <div class="errors-fullName errors">
                            <label class="titulos-boxs" for="fullName">Nombre y apellido:</label><br>
                            <h3 class="data-user"><%= locals.userLogged.full_name %></h3>
                            

                          
                        </div>

                       

                        <div class="errors-domicilio errors">
                            <label class="titulos-boxs" for="domicilio">Domicilio:</label>
                            <h3 class="data-user"><%= locals.userLogged.address %></h3>
                            

                         
                        </div>

                        
                        
                            
                        <div class="img-container">
                            <img src="image/usersAvatar/<%= user.img_profile%>"  alt="">
                        </div>
                        <div class="buttons">
                                <a href="/edit/<%= user.id %>">
    
                                    <button class="button-submit" type="submit">Editar Perfil</button>
    
                                </a>
                                </div>
    
                        <div class="redirec-login">
                            <div>
                                No te preocupes!, tus datos estan seguros.
                            </div>
                            <a class="link-inicia-sesion" href="/home">DigitalGames</a>

                        </div>
                    </form>
                </div>
            </main>

            <!-- FOOTER -->
            <%- include ("../partials/footer") %>

    </body>

</html>